{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noConstantCondition": "off"
			},
			"style": {
				"useTemplate": "off",
				"noNonNullAssertion": "off",
				"useConst": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"indentStyle": "tab"
		}
	},
	"json": {
		"parser": {
			"allowTrailingCommas": true
		}
	},
	"files": {
		"ignore": ["dist/", ".svelte-kit/", "project.inlang/", "src/lib/paraglide/"]
	}
}
